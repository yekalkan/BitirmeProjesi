<script language="JavaScript">

    formBagisci.style.display = "none";

    function chkForm()
    {
        formBagisci.usertype.value = "bagisci";


    }

</script>


<div id="login-page">
    <div class="container">
        <form id="formBagisci" name="formBagisci" class="form-panel" action="/kullanicibilgileri" method="post">
            <h2 class="form-login-heading">Değerli Bağışçımız, Lütfen İletişim Bilgilerinizi Giriniz</h2>
            <div class="login-wrap">


                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">İsminiz</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" style="width: 30%" autofocus><br><br>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Doğum Tarihiniz</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" name="birthdate" style="width: 30%" autofocus><br><br>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label">Adresiniz</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="Sokak/mahalle/kapı" name="address" style="width: 40%">
                        <input type="text" class="form-control" placeholder="İlçe" name="district" style="width: 20%">
                        <input type="text" class="form-control" placeholder="Şehir" name="city" style="width: 20%"><br><br>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 col-sm-2 control-label" >Telefon Numaranız</label>
                    <div class="col-sm-10">
                        <input type="tel" pattern="[0-9]{10}" class="form-control"  name="phone" style="width: 30%" ><br><br>
                    </div>
                </div>


                <input type="text" style="display: none;"  class="form-control" placeholder=".." name="usertype">
                <button class="btn btn-theme btn-block" id="submitbutton" onClick="return chkForm()" style="width: 40%; margin: auto"> <i class="fa fa-user" ></i> Kaydı Gönder </button>
                <hr>
            </div>
        </form>

    </div>
</div>

