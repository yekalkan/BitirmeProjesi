            <div class="login-wrap">
                <input type="text" class="form-control" placeholder="E-Mail" name="email" autofocus>
                <br>
                <input type="password" class="form-control" placeholder="Şifre" name="password">
                <br>
                <input type="password" class="form-control" placeholder="Tekrardan Şifre" name="password2">
                <br>

                <input type="text" style="display: none;"  class="form-control" placeholder=".." name="usertype">
                <button class="btn btn-theme btn-group" id="submitbutton" onClick="return chkFormBagisci()"> <i class="fa fa-user" ></i> BAĞIŞÇI OLUN </button>
                <button class="btn btn-theme btn-group" id="submitbutton2" onClick="return chkFormTemsilci()"> <i class="fa fa-university" ></i> TEMSİLCİ OLUN </button>
                <hr>
            </div>
        </form>

