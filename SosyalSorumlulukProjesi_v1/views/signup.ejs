<script language="JavaScript">

    formTemsilci.style.display = "none";

    function chkFormBagisci()
    {
        form1.usertype.value = "bagisci";
        if (form1.password.value != form1.password2.value)
        {
            alert("Password does not match");
            form1.password.value = "";
            form1.password2.value = "";
            form1.password.focus();
            return false;
        }
    }

    function chkFormTemsilci()
    {
        form1.usertype.value = "temsilci";
        if (form1.password.value != form1.password2.value)
        {
            alert("Password does not match");
            form1.password.value = "";
            form1.password2.value = "";
            form1.password.focus();
            return false;
        }
    }


</script>


<div id="login-page">
    <div class="container">
        <!-- action="/users" method="post" -->


        <form name="form1" class="form-login" action="/yenikullanici" method="post">
